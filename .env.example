# =============================================================================
# LensRoom V2 - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Site URL (for callbacks and webhooks)
# -----------------------------------------------------------------------------
SITE_URL=https://lensroom.ru
NEXT_PUBLIC_SITE_URL=https://lensroom.ru

# -----------------------------------------------------------------------------
# KIE.ai API (AI Generation Provider)
# -----------------------------------------------------------------------------
KIE_API_KEY=your-kie-api-key
KIE_CALLBACK_SECRET=your-callback-secret
KIE_CALLBACK_URL=https://lensroom.ru/api/webhooks/kie
# Optional overrides
# KIE_MARKET_BASE_URL=https://api.kie.ai
# KIE_UPLOAD_BASE_URL=https://kieai.redpandaai.co
# NEXT_PUBLIC_KIE_API_URL=https://api.kie.ai

# -----------------------------------------------------------------------------
# OpenAI (GPT Image 1.5)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key

# -----------------------------------------------------------------------------
# Veo (Google Video Generation)
# -----------------------------------------------------------------------------
# VEO_WEBHOOK_SECRET=your-veo-webhook-secret

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
JWT_SECRET=your-jwt-secret-min-32-chars
# TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# -----------------------------------------------------------------------------
# Robokassa (Payments)
# -----------------------------------------------------------------------------
ROBOKASSA_MERCHANT_LOGIN=your-merchant-login
ROBOKASSA_PASSWORD1=your-password1
ROBOKASSA_PASSWORD2=your-password2
ROBOKASSA_TEST_MODE=false

# Subscription Plan IDs
ROBOKASSA_SUBSCRIPTION_CREATOR=
ROBOKASSA_SUBSCRIPTION_CREATOR_PLUS=
ROBOKASSA_SUBSCRIPTION_BUSINESS=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# PREVIEWS_ENABLED=true
